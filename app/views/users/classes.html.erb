<div class="container">
  <div class="row">
    <div class="col-md-5 text-center">
      <%= render "sidebar"%>
    </div>

    <div class="col-md-7">
      <div class="scheduled col-xs-12">
        <div class="col-sm-5 scheduled-image img-responsive center-block">
