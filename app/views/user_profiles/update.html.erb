<h2><%= simple_format @user.username %></h2>

<%= form_for @profile, :url => user_profile_path(@user) do |f| %>

    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %>

    <%= f.label :username, "I Am" %>
    <%= f.text_field :username %>

    <%= f.label :birthday, "Birthday" %>
    <%= f.datetime_select :birthday %>

    <%= f.label :email, "Email" %>
    <%= f.email_field :email %>

    <%= f.label :location, "Location" %>
    <%= f.select(:location ,options_for_select([["台北", 3],["印尼", 1]],"3"),{}, {:class => "private_select width100"} )%>

    <%= f.label :currency, "Currency" %>
    <%= f.select(:currency ,options_for_select([["紙錢", 3],["美金", 1]],"3"),{}, {:class => "private_select width100"} )%>

    <%= f.label :time_zone, "TimeZone" %>
    <%= f.select(:time_zone ,options_for_select([["白天", 3],["半夜", 1]],"3"),{}, {:class => "private_select width100"} )%>


    <%= f.submit 'save', :class => "btn btn-primary" %>
<% end %>
