<!DOCTYPE html>
<html>
  <head>
    <title>Amazingtotur</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.0.1/jquery.rateyo.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.0.1/jquery.rateyo.min.js"></script>

    <script type="text/javascript">
      $(function () {
        $("#rateYo").rateYo({starWidth: "15px", rating: 2, fullStar: true, normalFill: "#A0A0A0", spacing: "5px"});
      });
      $(function () {
        $("#rateYo").rateYo().on("rateyo.set", function (e, data) {
          $.ajax({
            type: "POST",
            url: "/evaluations",
            dataType: 'JSON',
            data: {
              rating_count: data.rating
            }
          });
        });
      });
      $(document).ready(function () {
        $('#pop-booking').hide();
        $('#pop-black').hide();
        $('#booknow').click(function (e) {
          $('#pop-black').fadeIn(1);
          $('#pop-booking').fadeIn(300);
        });
        $('#pop-black').click(function (e) {
          $('#pop-booking').fadeOut(1);
          $('#pop-black').fadeOut(1);
        });
        $(".selectpicker").selectpicker();
        $(".js-example-basic-single").select2();
        $("#priceslide").slider();
        $(".language-select").select2({placeholder: "Select a language"});
      });
    </script>
  </head>
  <body>
    <nav class="navbar navbar-default nav-modify navbar-fixed-top" id="nav">
      <div class="container nav-relative">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header brand-center">
          <%= link_to root_path , :class=>"navbar-brand" do%>
          <span>Amazing</span>
          <span>tutor</span>
          <% end %>
        </div>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse clearfix" id="bs-example-navbar-collapse-1" style="content=" "">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#">Apply a Teacher</a>
            </li>
            <li>
              <%#= link_to("Log In",new_session_path(:user),id:"login") if !current_user%>
              <%= link_to("Log In",new_session_path(:user)) if !current_user%>
            </li>
            <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User ID
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Dashboard",classes_user_path(current_user) %></li>
                <% if current_user.authority == "teacher" %>
                <li><%= link_to "教師資訊" ,introduce_teacher_path(current_user.teacher.id)%></li>
                <li><%= link_to "授課日曆" ,calendar_teacher_path(current_user.teacher.id)%></li>
                <% end %>
                <li>
                  <a href="#"><%= link_to('Log Out', destroy_user_session_path, :method => :delete)%></a>
                </li>
              </ul>
            </li>
            <% end %>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>
    <div class="nav-top"></div>
    <%= yield %>
  </body>
</html>
