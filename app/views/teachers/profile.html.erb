        </div>
    <% end %>
    <% @teacher.educations.each do |e| %>
        <div class="col-xs-12 background-content">
          <h6 class="text-center"><%= e.start %>&nbsp;<%= "-" if e.start %>&nbsp;<%= e.end %></h6>
          <h5>Education</h5>
          <h6><%= e.school %></h6>
          <p><%= e.major %></p>
        </div>
    <% end %>
    <% @teacher.certificates.each do |e| %>
        <div class="col-xs-12 background-content">
          <h5>Certificate</h5>
          <h6>Certificate Name : <%= e.name %></h6>
          <p>SCORE : <%= e.score %></p>
